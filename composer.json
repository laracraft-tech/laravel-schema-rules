{
    "name": "laracraft-tech/laravel-schema-rules",
    "description": "Reflect your database table schema types as Laravel validation rules!",
    "keywords": [
        "laracraft-tech",
        "laravel",
        "laravel-schema-rules"
    ],
    "homepage": "https://github.com/laracraft-tech/laravel-schema-rules",
    "license": "MIT",
    "authors": [
        {
            "name": "Zacharias Creutznacher",
            "email": "zacharias@laracraft.tech",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "doctrine/dbal": "^3.6",
        "illuminate/contracts": "^8.0 || ^9.0 || ^10.0",
        "illuminate/database": "^8.0 || ^9.0 || ^10.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0",
        "illuminate/testing": "^8.0 || ^9.0 || ^10.0",
        "spatie/laravel-package-tools": "^1.12 || ^1.14"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "nunomaduro/larastan": "^1.0 || ^2.5",
        "orchestra/testbench": "^6.27 || ^7.0  || ^8.0 ",
        "pestphp/pest": "^1.22 || ^2.0",
        "pestphp/pest-plugin-laravel": "^1.22 || ^2.0",
        "spatie/laravel-ray": "^1.32"
    },
    "autoload": {
        "psr-4": {
            "LaracraftTech\\LaravelSchemaRules\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaracraftTech\\LaravelSchemaRules\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaracraftTech\\LaravelSchemaRules\\LaravelSchemaRulesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
